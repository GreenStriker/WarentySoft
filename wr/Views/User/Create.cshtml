@model wr.entity.User

@{
    ViewData["Title"] = "Create";
}



<div class="single-product-tab-area mg-tb-15">
    <!-- Single pro tab review Start-->
    <div class="single-pro-review-area">
        <div class="container-fluid">
            <form asp-action="Create">

                <div class="form-group hidden">
            
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="review-tab-pro-inner">
                            <ul id="myTab3" class="tab-review-design">
                                <li class="active"><a href="#description"><i class="fa fa-pencil" aria-hidden="true"></i> New User</a></li>
                                @*<li><a href="#reviews"><i class="fa fa-file-image-o" aria-hidden="true"></i> Pictures</a></li>
                                    <li><a href="#INFORMATION"><i class="fa fa-commenting" aria-hidden="true"></i> Review</a></li>*@
                            </ul>
                            <div id="myTabContent" class="tab-content custom-product-edit">
                                <div class="product-tab-list tab-pane fade active in" id="description">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">
                                                Full Name:
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                    <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                                </div>

                                                UserName:
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                                    <input asp-for="UserName" class="form-control" placeholder="User Name" value="" autocomplete="off"/>
                                                </div>
                                                Password:
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                                                    <input asp-for="Password" class="form-control" placeholder="Password" value="" type="password" autocomplete="off"/>
                                                </div>
                                               

                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="review-content-section">
                                                Designation:
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-table" aria-hidden="true"></i></span>
                                                    <input asp-for="Designation" class="form-control" placeholder="Designation" />
                                                </div>
                                                Mobile No:
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-mobile" aria-hidden="true"></i></span>
                                                    <input asp-for="Moble" class="form-control" placeholder=" Mobile Number" />
                                                </div>
                                                Address:
                                                <div class="input-group mg-b-pro-edt">
                                                    <span class="input-group-addon"><i class="fa fa-home" aria-hidden="true"></i></span>
                                                    <input asp-for="Address" class="form-control" placeholder="Address" />
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="text-center mg-b-pro-edt custom-pro-edt-ds">
                                                <button type="submit"  data-requiredconfirmation="true" class="btn btn-primary waves-effect waves-light m-r-10">
                                                    Save
                                                </button>

                                                <a asp-action="Index" class="btn btn-warning waves-effect waves-light">Discard</a>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>